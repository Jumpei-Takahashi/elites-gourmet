<%= link_to restaurant_path(restaurant) do %>
  <div class="per_restaurant">
    <div class="name">
      <%= restaurant.name.truncate(10) %>
    </div>
    <div class="content clearfix">
      <div class="image">
        <% if restaurant.restaurant_images.first.image? %>
          <%= image_tag restaurant.restaurant_images.first.image.url %>
        <% end %>
      </div>
      <div>
        <div class="genres">
          <%= render 'restaurants/genre_list', restaurant: restaurant %>
        </div>
        <div class="restaurant_introduction">
          <%= truncate(strip_tags(restaurant.restaurant_introduction), :omission => "...") %>
        </div>
      </div>
    </div>
  </div>
<% end %>